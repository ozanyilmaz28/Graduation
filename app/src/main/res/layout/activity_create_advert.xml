<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackEndColour"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.graduationteam.graduation.CreateAdvertActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/createAdvertLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mainImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|center_horizontal"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iconcamera" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/createAdvertMainCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_toLeftOf="@+id/btnCreateAdvertTakePhoto"
                        android:layout_toStartOf="@+id/btnCreateAdvertTakePhoto"
                        android:background="@drawable/custom_field">

                    </Spinner>

                    <ImageButton
                        android:id="@+id/btnCreateAdvertTakePhoto"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/iconphotomachine" />

                </RelativeLayout>


                <Spinner
                    android:id="@+id/createAdvertSubCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/custom_field">

                </Spinner>

                <EditText
                    android:id="@+id/pageCreateAdvertEdtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/custom_field"
                    android:gravity="top"
                    android:hint="@string/CreateAdvertViewPleaseEnterDescription"
                    android:inputType="textCapSentences|textMultiLine"
                    android:lines="5"
                    android:maxLength="1000"
                    android:maxLines="10" />

                <EditText
                    android:id="@+id/pageCreateAdvertEdtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/custom_field"
                    android:digits="0123456789"
                    android:hint="@string/CreateAdvertViewUseDifferentPhone"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/pageCreateAdvertEdtMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/custom_field"
                    android:hint="@string/CreateAdvertViewUseDifferentMail"
                    android:inputType="textEmailAddress"
                    android:maxLength="60"
                    android:maxLines="2" />

                <EditText
                    android:id="@+id/pageCreateAdvertEdtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/custom_field"
                    android:hint="@string/CreateAdvertViewPrice"
                    android:inputType="number" />


            </LinearLayout>

            <Button
                android:id="@+id/pageCreateAdvertBtnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:background="@color/appBackEndColour"
                android:text="@string/CreateAdvert"
                android:textColor="@color/appFrontEndColour" />
        </RelativeLayout>

    </ScrollView>

</LinearLayout>
