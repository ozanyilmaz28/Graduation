<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackEndColour"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.graduationteam.graduation.CreateAdvertActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_layout"
        android:gravity="center|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/mainImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/iconcamera" />

        </LinearLayout>

        <Spinner
            android:id="@+id/createAdvertMainCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/custom_field">

        </Spinner>

        <Spinner
            android:id="@+id/createAdvertSubCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/custom_field">

        </Spinner>

        <EditText
            android:id="@+id/pageCreateAdvertEdtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/custom_field"
            android:gravity="top"
            android:hint="@string/CreateAdvertViewPleaseEnterDescription"
            android:lines="5"
            android:maxLength="1000"
            android:maxLines="10" />

        <EditText
            android:id="@+id/pageCreateAdvertEdtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/custom_field"
            android:hint="@string/CreateAdvertViewUseDifferentPhone"
            android:maxLength="15"
            android:singleLine="true" />

        <EditText
            android:id="@+id/pageCreateAdvertEdtMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/custom_field"
            android:hint="@string/CreateAdvertViewUseDifferentMail"
            android:maxLength="60"
            android:maxLines="2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/custom_field"
            android:hint="@string/CreateAdvertViewUseLocationInfo" />

        <Button
            android:id="@+id/pageCreateAdvertBtnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/CreateAdvert"
            android:textColor="@color/appFrontEndColour"
            android:background="@color/appBackEndColour" />
    </LinearLayout>

</LinearLayout>
