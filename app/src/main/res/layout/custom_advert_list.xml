<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="1dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgAdvertList"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@drawable/iconmainlistnotfoundbigger"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/advertListRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtAdvertListPrice"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center|left"
            android:layout_toLeftOf="@+id/txtAdvertListPrice"
            android:layout_toStartOf="@+id/txtAdvertListPrice"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAdvertListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:text="TextView"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtAdvertListCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="TextView"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtAdvertListDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="TextView"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtAdvertListPhone"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txtAdvertListMail"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/txtAdvertListID"
                android:layout_width="0dp"
                android:layout_height="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtAdvertListPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25dp" />


    </RelativeLayout>


</LinearLayout>

